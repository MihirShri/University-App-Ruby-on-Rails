<div class="row">
  <div class="col s12">
    <h3 class="center-align"><%= @student.name %>'s Profile</h3>
  </div>
</div>

<div class="row">
  <div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= @student.name %></span>
        <p><%= @student.email %></p>
        <p>Course Enrollments: 
          <% if @student.courses.empty? %>
            None
          <% else %>
            <% @student.courses.each do |course| %>
              <br><%= course.name %>
            <% end %>
          <% end %>
        </p>
      </div>
      <% if @student == current_student %>
        <div class="card-action">
          <%= link_to edit_student_registration_path, class: "waves-effect waves-light btn" do %>
            <i class="material-icons right">create</i>Edit Profile
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>