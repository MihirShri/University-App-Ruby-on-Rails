<div class="row">
  <div class="col s12">
    <h3 class="center-align">Student Listing</h3>
  </div>
</div>

<div class="row">
  <% @students.each do |student| %>
    <div class="col s6 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= student.name %></span>
          <p><%= student.email %></p>
          <p>Course Enrollments: None</p>
        </div>
        <div class="card-action">
          <%= link_to student_path(student), class: "waves-effect waves-light btn" do %>
            <i class="material-icons right">visibility</i>View Profile
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
