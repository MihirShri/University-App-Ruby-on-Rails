<header>
  <ul id="dropdown1" class="dropdown-content">
    <% if !student_signed_in? %>
      <li><%= link_to "Log in", new_student_session_path %></li>
      <li><%= link_to "Sign up", new_student_registration_path %></li>
    <% else %>
      <li><%= link_to "View Profile", student_path(current_student) %></li>
      <li><%= link_to "Logout", destroy_student_session_path, method: :delete %></li>
    <% end %>
  </ul>
  <ul id="dropdown2" class="dropdown-content">
    <% if !student_signed_in? %>
      <li><%= link_to "Log in", new_student_session_path %></li>
      <li><%= link_to "Sign up", new_student_registration_path %></li>
    <% else %>
      <li><%= link_to "View Profile", student_path(current_student) %></li>
      <li><%= link_to "Logout", destroy_student_session_path, method: :delete %></li>
    <% end %>
  </ul>
  <nav>
    <div class="container">
      <div class="nav-wrapper">
        <%= link_to "IIITDM", root_path, class: "brand-logo right" %>
        <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        <ul id="nav-mobile" class="left hide-on-med-and-down">
          <li><%= link_to "Courses", root_path %></li>
          <% if student_signed_in? %>
            <li><%= link_to "Students", students_path %></li>
          <% end %>
          <li><a class="dropdown-trigger" href="#!" data-target="dropdown1">Account<i class="material-icons right">arrow_drop_down</i></a></li>
        </ul>
        <ul class="sidenav" id="mobile-demo">
          <li><%= link_to "Courses", root_path %></li>
          <% if student_signed_in? %>
            <li><%= link_to "Students", students_path %></li>
          <% end %>
          <li><a class="dropdown-trigger" href="#!" data-target="dropdown2">Account<i class="material-icons right">arrow_drop_down</i></a></li>
        </ul>
      </div>
    </div>
  </nav>
  <% if notice %>
    <div class="container">
      <div class="row sign-up-form">
        <div class="col s12 m12 l12">
          <div class="card-panel red lighten-2" id="fade-out-target">
            <span class="white-text">
              <%= notice %>
            </span>
          </div>
        </div>
      </div>
    </div>
  <% elsif alert %>
    <div class="container">
      <div class="row sign-up-form">
        <div class="col s12 m12 l12">
          <div class="card-panel red lighten-2" id="fade-out-target">
            <span class="white-text">
              <%= alert %>
            </span>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</header>